{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "https://interview-share-backend.onrender.com/api/$1" },
        { "source": "/login", "destination": "https://interview-share-backend.onrender.com/login" },
        { "source": "/register", "destination": "https://interview-share-backend.onrender.com/register" },
        { "source": "/logout", "destination": "https://interview-share-backend.onrender.com/logout" },
        { "source": "/(.*)", "destination": "/index.html" }
    ]
}
